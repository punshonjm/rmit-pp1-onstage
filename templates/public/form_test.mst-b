<p>Basic Form Test</p>
<form>
    <div class="form-group">
        <label for="id_instrument_single">Instrument (Single)</label>
        <select class="select2-test-instrument js-example-basic-single js-states form-control" id="id_instrument_single"></select>
    </div>
    <div class="form-group">
        <label for="id_instrument_multiple">Instrument (Multiple)</label>
        <select class="select2-test-instrument js-example-basic-multiple js-states form-control" id="id_instrument_multiple" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <label for="id_genre_single">Genre (Single)</label>
        <select class="select2-test-genre js-example-basic-single js-states form-control" id="id_genre_single"></select>
    </div>
    <div class="form-group">
        <label for="id_genre_multiple">Genre (Multiple)</label>
        <select class="select2-test-genre js-example-basic-multiple js-states form-control" id="id_genre_multiple" multiple="multiple"></select>
    </div>
</form>

<script>
	$(document).ready(function() {
		$('.select2-test-instrument').select2({
			placeholder: "Choose instruments...",
	        ajax: {
	            url: '/api/instrument/',
	            data: function (params) {
	                var query = {
	                    search: params.term
	                };
	                return query;
	            }
	        },
	        theme: "material"
	    });

	    $('.select2-test-genre').select2({
			placeholder: "Choose genres...",
	        ajax: {
	            url: '/api/genre/',
	            data: function (params) {
	                var query = {
	                    search: params.term
	                };
	                return query;
	            }
	        },
	        theme: "material"
	    });

		$(".select2-selection__arrow").addClass("material-icons").html("arrow_drop_down");
	});
</script>
